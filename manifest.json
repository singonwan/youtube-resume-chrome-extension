{
	"manifest_version": 3,
	"name": "YouTube Resume",
	"version": "1.0.0",
	"description": "YouTube Resume automatically saves your YouTube video's last-watched timestamp, along with the videoâ€™s URL and title.",
	"content_security_policy": {
		"extension_pages": "default-src 'self'"
	},
	"permissions": ["storage"],
	"host_permissions": ["https://www.youtube.com/*"],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_popup": "popup.html"
	}
}
